{{define "title"}}{{.LitRune}} ({{.CodepointHexAsString}}) {{.RuneName}} {{end}}

{{define "extraHead"}}
<link rel='canonical' href="https://unicode.click/{{.CodepointHexAsString}}">
<style>

    ::selection {
    color: white;
    background: black;
    }

    dl {
        display: grid;
        grid-template-rows: 1fr 1fr;
        grid-gap: 2vh;
    }

    .casevar {
        font-size: 1.5em;
        transform: translateY(-0.33em);
    }

    dt {
        text-align: right;
    }

    dd {
        text-align: left;
        margin-left: 0%;
    }

    body {
        text-align: center;
        font-family: monospace;
        font-size: 1.1em;
        padding-left: 33%;
        padding-right: 33%;
        line-height: 1;
    }

    .serif {
        font-family: serif;
    }

    h1 {
        display: inline-flex;
        max-height: 4.5vw;
        font-style: normal;
        font-weight: 400;
        margin-top: 2vw;
    }

    h2 {
        margin-top: 3vh;
        margin-bottom: -0.66vh;
        text-align: center;
    }

    footer,
    dl {
        margin-top: 3.66vh;
    }

    footer {
        display: block;
        padding-bottom: 4vh;
        overflow-y: hidden;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    a:hover {
        font-style: oblique;
    }

    #runename {
        max-width: 90%;
    }

    #majorCat {
        margin: 0;
    }

    ul,
    li {
        list-style-position: inside;
        list-style-type: none;
        margin: 0;
        padding: 0;
    }

    h1>div {
        line-height: 1;
        outline: grey solid 0.1vw;
        display: inline-flex;
        align-items: baseline;
        width: 6ex;
        height: 6ex;
        z-index: 10;
        position: relative;
        margin-left: 0.5vw;
        margin-right: 0.5vw;
        text-align: center;
    }

    h1>div>span {
        position: relative;
        font-size: 6ex;
        z-index: 11;
        width: 100%;
        height: max-content;
    }

    .absoluteGL {
        position: absolute;
        z-index: 1;
        width: 50%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 0;
        outline: lightgrey dashed 0.1vw;
    }

    .subgl {
        height: 50%;
        width:100%;
        transform: translateY(calc(2/3 * 100%));
        outline: none;
        border-bottom: lightgrey dashed 0.1vw;
        border-top: lightgrey dashed 0.1vw;


    }

    .sans {
        font-family: sans-serif;
    }

    .monospace {
        font-family: monospace;
    }
</style>

{{end}}

{{define "header"}}
<h1>
    <div>
        <span class="serif">{{.LitRune}}</span>
        <div class="absoluteGL" style="transform: translateX(100%);"></div>
        <div class="absoluteGL"></div>

        <div class="absoluteGL subgl"></div>

    </div>

    <div>
        <span class="monospace">{{.LitRune}}</span>

        <div class="absoluteGL" style="transform: translateX(100%);"></div>
        <div class="absoluteGL"></div>

        <div class="absoluteGL subgl"></div>
    </div>

    <div>
        <span class="sans">{{.LitRune}}</span>
        <div class="absoluteGL" style="transform: translateX(100%);"></div>
        <div class="absoluteGL"></div>

        <div class="absoluteGL subgl"></div>
    </div>
</h1>

{{ if .IsPrint }}
<a id="runename" href="https://en.wiktionary.org/wiki/{{.LitRune}}" target="_blank">
    {{ end }}
    <h2>{{.RuneName}}</h2>
    {{ if .IsPrint }}
</a>
{{ end }}

<h3>({{.CodepointHexAsString}})</h3>
{{end}}

{{define "main"}}
<dl>
    {{if .Scripts | ne ""}}
    <dt>Script</dt>
    <dd>{{.Scripts}}</dd>
    {{end}}

    <dt>Categories</dt>
    <dd>
        <p id="majorCat">{{.MajorCategories}};</p>
        <ul>
            <li>{{.Categories}}</li>
        </ul>
    </dd>

    {{if .Properties}}
    <dt>Properties</dt>
    <dd>
        <ul>
            {{ range .Properties }}
            <li>{{.}}</li>
            {{end}}
        </ul>
    </dd>
    {{end}}
</dl>

<dl>
    <dt>Control Character</dt>
    <dd>
        {{if .IsControl}}
        ✅
        {{else}}
        ❌
        {{end}}
    </dd>

    <dt>Decimal Digit</dt>
    <dd>{{ if .IsDigit}}
        ✅
        {{else}}
        ❌
        {{end}}
    </dd>

    <dt>Graphic</dt>
    <dd>{{if .IsGraphic}}
        ✅
        {{else}}
        ❌
        {{end}}
    </dd>

    <dt>Letter</dt>
    <dd>{{if .IsLetter}}
        ✅
        {{else}}
        ❌
        {{end}}
    </dd>

    <dt>Lowercase</dt>
    <dd>{{if .IsLower}}
        ✅
        {{else}}
        ❌
        {{end}}
    </dd>

    <dt>Uppercase</dt>
    <dd>{{if .IsUpper}}
        ✅
        {{else}}
        ❌
        {{end}}
    </dd>

    <dt>Titlecase</dt>
    <dd>{{if .IsTitle}}
        ✅
        {{else}}
        ❌
        {{end}}
    </dd>

    <dt>Mark</dt>
    <dd>{{if .IsMark}}
        ✅
        {{else}}
        ❌
        {{end}}
    </dd>

    <dt>Number</dt>
    <dd>{{if .IsNumber}}
        ✅
        {{else}}
        ❌
        {{end}}
    </dd>

    <dt>Print</dt>
    <dd>{{if .IsPrint}}
        ✅
        {{else}}
        ❌
        {{end}}
    </dd>

    <dt>Punctuation</dt>
    <dd>{{if .IsPunct}}
        ✅
        {{else}}
        ❌
        {{end}}
    </dd>

    <dt>Space Character</dt>
    <dd>{{if .IsSpace}}
        ✅
        {{else}}
        ❌
        {{end}}
    </dd>

    <dt>Symbol</dt>
    <dd>{{if .IsSymbol}}
        ✅
        {{else}}
        ❌
        {{end}}
    </dd>

</dl>

{{if .HasDifferentCase}}

<dl>
    {{if .AsLowercase | ne .AsUppercase | and (not .IsUpper)}}
    <dt>Uppercase Variation</dt>
    <dd class="casevar">
        <a href="https://unicode.click/{{.AsUppercase}}">
            <span class="monospace">{{.AsUppercase}}</span>
            <span>{{.AsUppercase}}</span>
            <span class="serif">{{.AsUppercase}}</span>
        </a>
    </dd>
    {{end}}


    {{if .AsLowercase | ne .AsUppercase | and (not .IsLower)}}
    <dt>Lowercase Variation</dt>
    <dd class="casevar">
        <a href="https://unicode.click/{{.AsLowercase}}">
            <span class="serif">{{.AsLowercase}}</span>
            <span class="sans">{{.AsLowercase}}</span>
            <span class="monospace">{{.AsLowercase}}</span>
        </a>
    </dd>
    {{end}}

    {{if .AsTitlecase | ne .LitRune }}
    {{if .AsTitlecase | ne .AsUppercase }}
    <dt>Titlecase Variation</dt>
    <dd class="casevar">
        <a href="https://unicode.click/{{.AsTitlecase}}">
            <span class="serif">{{.AsTitlecase}}</span>
            <span class="sans">{{.AsTitlecase}}</span>
            <span class="monospace">{{.AsTitlecase}}</span>
        </a>
    </dd>
    {{end}}
    {{end}}
</dl>
{{end}}

{{end}}